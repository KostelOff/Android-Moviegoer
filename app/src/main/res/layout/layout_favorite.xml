<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_favorite_id"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_avatar_main_layout"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_title_main"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/date_release_main"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_main_layout"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar_main_layout" />

    <TextView
        android:id="@+id/date_release_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date_release_main"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar_main_layout"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_main_layout"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar_main_layout" />

    <TextView
        android:id="@+id/tv_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_popularity"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar_main_layout"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_main_layout"
        app:layout_constraintTop_toBottomOf="@+id/date_release_main" />
</androidx.constraintlayout.widget.ConstraintLayout>